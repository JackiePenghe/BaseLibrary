<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sscl.basesample">

    <application
        android:name="com.sscl.basesample.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.sscl.basesample.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sscl.basesample.activities.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity android:name="com.sscl.basesample.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.almsound.cn"
                    android:pathPattern="/almsound"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity android:name="com.sscl.basesample.activities.sample.SampleBaseAppcompatActivity" />
        <activity android:name="com.sscl.basesample.activities.sample.SampleBaseDrawerActivity" />
        <activity android:name="com.sscl.basesample.activities.sample.SampleBaseFragmentActivity" />
        <activity android:name="com.sscl.basesample.activities.sample.SampleBasePopupWindowActivity"
            android:theme="@style/AppTheme"/>
        <activity android:name="com.sscl.basesample.activities.sample.AllPurposeAdapterActivity" />
        <activity android:name="com.sscl.basesample.activities.sample.HomeWatcherActivity" />
        <activity android:name="com.sscl.basesample.activities.sample.ToastTestActivity"/>
    </application>

</manifest>