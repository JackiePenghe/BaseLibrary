<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GifView">
        <attr name="gif" format="reference" />
        <attr name="paused" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="max_progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="round_color" format="color" />
        <attr name="round_width" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="show_text" format="boolean" />
    </declare-styleable>
    <declare-styleable name="Banner">
        <attr name="points_visibility" format="boolean" />
        <attr name="points_position" format="enum">
            <enum name="CENTER" value="0" />
            <enum name="LEFT" value="1" />
            <enum name="RIGHT" value="2" />
        </attr>
        <attr name="points_container_background" format="reference|color" />
    </declare-styleable>
    <declare-styleable name="FlowLayout">
        <attr name="line_interval" format="dimension" />
        <attr name="internal_line_interval" format="dimension" />
    </declare-styleable>
    <declare-styleable name="PasswordView">
        <attr name="android:text" />
        <attr name="android:maxEms" />
    </declare-styleable>
</resources>